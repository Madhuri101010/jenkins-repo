pipeline {
    agent any

   
    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/Madhuri101010/jenkins-repo.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Run Tests') {
            steps {
                sh 'npm test'
            }
        }

        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }

        
    }
}
